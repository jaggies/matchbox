SubDir TOP lib core ;

SubDirHdrs $(TOP) lib config ;
SubDirHdrs $(TOP) lib render ;
SubDirHdrs $(TOP) lib core $(TARGET) ;

Library libmatchbox :
	adc.cpp
	pin.cpp
	fifo.cpp
	#eeprom.cpp
	pinio.cpp
	lcd.cpp
	matchbox.cpp
	syscalls.c
	spi.cpp
	usart.cpp
	usbserial.cpp
	util.cpp
	;

if $(TARGET) = stm32f4xx {
Library libmatchbox :
	usbd_cdc_if.c
	usbd_desc.c
;
}

SubInclude TOP lib core $(TARGET) ;
